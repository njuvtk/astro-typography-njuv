---
export interface Props {
  name: string;
  url: string;
  avatar: string;
  desc: string;
}

const { name, url, avatar, desc } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer"
  class="friend-card block p-4 rounded-xl border shadow-sm hover:shadow-md transition duration-300 hover:scale-[1.02] bg-white dark:bg-zinc-800 text-center">
  <img src={avatar} alt={name} class="w-16 h-16 mx-auto mb-2 rounded-full border" />
  <h3 class="text-lg font-bold mb-1">{name}</h3>
  <p class="text-sm text-gray-500 dark:text-gray-400">{desc}</p>
</a>