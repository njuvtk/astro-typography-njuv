---
const submitUrl = "https://formspree.io/f/mqaqrywg"; // 或你部署的表单服务
---

<form action={submitUrl} method="POST" class="max-w-xl mx-auto space-y-4">
  <h2 class="text-xl font-semibold">申请友链</h2>

  <input type="text" name="title" placeholder="站点名称" required class="input" />
  <input type="url" name="url" placeholder="站点链接" required class="input" />
  <input type="url" name="avatar" placeholder="头像地址" class="input" />
  <input type="text" name="description" placeholder="一句话介绍" class="input" />

  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">提交</button>
</form>

<style>
  .input {
    @apply w-full border p-2 rounded bg-white dark:bg-zinc-800 dark:text-white;
  }
</style>